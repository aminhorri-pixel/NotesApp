<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="75dp"
    android:elevation="10dp"
    android:background="@drawable/toolbar_style"
    android:orientation="vertical">


    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        app:srcCompat="@drawable/brand"
        android:rotation="-90"
        android:id="@+id/img_toolbar_logo"
        android:padding="5dp"
        android:layout_height="50dp"/>

    <TextView
        android:text="NoteApp"
        android:layout_width="wrap_content"
        android:layout_below="@id/img_toolbar_logo"
        android:id="@+id/txt_toolbar_info"
        android:layout_centerHorizontal="true"
        android:textColor="@color/With"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="30dp"
        app:srcCompat="@drawable/checked"
        android:id="@+id/img_toolbar_ok"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_height="30dp"/>

    <ImageView
        android:layout_width="30dp"
        app:srcCompat="@drawable/ic_featured_play_list_black_24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/img_toolbar_showNote"
        android:layout_alignParentLeft="true"
        android:layout_height="30dp"/>

</RelativeLayout>