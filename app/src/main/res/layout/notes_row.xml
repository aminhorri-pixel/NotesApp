<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/strock_row_note"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                tools:text="android course"
                android:layout_width="wrap_content"
                android:fontFamily="@font/font"
                android:id="@+id/txt_showNotes_title"
                android:layout_marginLeft="20dp"
                android:maxLines="1"
                android:maxLength="25"
                android:ellipsize="end"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_toLeftOf="@id/img_noteRow_edit"
                android:layout_below="@id/txt_showNotes_title"
                android:layout_height="2dp"/>

            <ImageView
                android:src="@drawable/cover_btn_row"
                android:layout_marginTop="11dp"
                android:layout_marginRight="18dp"
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:layout_height="90dp"/>

            <ImageView
                app:srcCompat="@drawable/edit"
                android:layout_width="23dp"
                android:id="@+id/img_noteRow_edit"
                android:layout_marginRight="30dp"
                android:layout_marginTop="23dp"
                android:layout_alignParentRight="true"
                android:layout_height="23dp"/>

            <ImageView
                app:srcCompat="@drawable/bin"
                android:layout_width="23dp"
                android:id="@+id/img_noteRow_delete"
                android:layout_marginRight="28dp"
                android:layout_marginTop="23dp"
                android:layout_below="@id/img_noteRow_edit"
                android:layout_alignParentRight="true"
                android:layout_height="23dp"/>


            <TextView
                tools:text="the best android programmer in iran"
                android:fontFamily="@font/font"
                android:textColor="@color/Black"
                android:id="@+id/txt_showNotes_desc"
                android:layout_marginLeft="20dp"
                android:maxLength="35"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_below="@id/txt_showNotes_title"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_below="@id/txt_showNotes_desc"
                android:layout_width="20dp"
                android:layout_marginLeft="38dp"
                android:id="@+id/imgClock"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/clocks"
                android:layout_height="20dp"/>

            <TextView
                tools:text="12:45"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/imgClock"
                android:fontFamily="@font/font"
                android:layout_marginTop="5dp"
                android:id="@+id/txt_ShowNotes_time"
                android:layout_marginLeft="33dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:textColor="@color/Black"
                android:fontFamily="@font/font"
                android:layout_below="@id/txt_showNotes_desc"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/txtRemmember"
                android:text="Reminder at:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_below="@id/txtRemmember"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:id="@+id/txt_remmember_date"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/font"
                android:text="12/30/2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="NoteDate:"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/Black"
                android:id="@+id/txtNoteDate"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/font"
                android:layout_marginRight="15dp"
                android:layout_below="@id/img_noteRow_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:fontFamily="@font/font"
                android:textColor="@color/colorPrimaryDark"
                android:text="12/14/2020"
                android:layout_alignParentRight="true"
                android:id="@+id/txt_ShowNotes_noteDate"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/txtNoteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>