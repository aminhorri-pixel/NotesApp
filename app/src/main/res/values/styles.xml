<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/SetGoogleFont</item>
        <item name="editTextStyle">@style/setEditTextFont</item>
    </style>


    <style name="SetGoogleFont" parent="android:Widget.TextView">
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="setEditTextFont" parent="android:Widget.EditText">
        <item name="fontFamily">@font/font</item>
    </style>

</resources>
